{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2023"],
    // Transpile to commonjs modules for node
    "module": "CommonJS",
    // Don't emit; allow Babel to transform files
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
