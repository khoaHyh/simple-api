{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024"],
    "moduleResolution": "node",
    "module": "CommonJS",
    // Don't emit; allow SWC to transform files
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
